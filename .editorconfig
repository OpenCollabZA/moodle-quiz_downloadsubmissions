# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
# trim_trailing_whitespace = false
insert_final_newline = true

[*.css]
indent_style = space
indent_size = 4

# 4 space indentation
[*.md]
indent_style = space
indent_size = 4

[*.mustache]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# 4 space indentation
[*.php]
indent_style = space
indent_size = 4